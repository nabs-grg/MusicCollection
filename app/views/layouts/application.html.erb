<!DOCTYPE html>
<html>
  <head>
    <title>MusicCollection</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<nav class="navbar navbar-default">
  		<div class="container">
  			<div class="navbar-header">
  			<%= link_to "Music Collection", root_path, class: "navbar-brand" %>
  			</div>

  			<ul class="nav navbar-nav">
  				<li><%= link_to "Sign Up", new_user_registration_path %></li>

  				<!-- check user is signed in or not -->
  				<% if user_signed_in?  %>
  					<li><%=  link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
  				<% else  %>
  					<li><%= link_to "Sign in", new_user_session_path %></li>
  				<% end %>
  			</ul>

  			<ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Genre<span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
            <% Genre.all.each do |genre|%>
              <li class="<%= 'active' if params[:genre] == genre.name%>" >
                 <%= link_to genre.name, musics_path(genre: genre.name), class: "link" %> 
              </li>
            <% end %>
            </ul>
          </li>

  				<% if user_signed_in? %>
  					<li><%= link_to "Add New Album And Track", new_music_path %></li>
  				<% end  %>
  			</ul>

  		</div>
  	</nav>

  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
